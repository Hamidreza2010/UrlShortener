<controls:WindowBorderless
    x:Class="UrlShortener.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UrlShortener"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="600"
    Height="220"
    Foreground="WhiteSmoke"
    NonClientAreaBackground="#3c3c3c"
    OtherButtonHoverBrush="#888580"
    ShowInTaskbar="True"
    ShowTitle="True"
    ResizeMode="CanMinimize"
    Topmost="True"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <controls:WindowBorderless.Style>
        <Style BasedOn="{StaticResource CustomWindowStyle}" TargetType="controls:WindowBorderless">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=tabc, Path=SelectedIndex}" Value="1">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="400"
                                    Duration="0:0:0" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Height"
                                    To="220"
                                    Duration="0:0:0" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </controls:WindowBorderless.Style>
    <controls:WindowBorderless.NonClientAreaContent>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                <Menu
                    Margin="10,0,0,0"
                    Background="Transparent"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <MenuItem
                        Click="MenuItem_Click"
                        Foreground="WhiteSmoke"
                        Header="Update"
                        Tag="Update" />
                    <MenuItem
                        Click="MenuItem_Click"
                        Foreground="WhiteSmoke"
                        Header="About"
                        Tag="About" />
                </Menu>
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Margin="10,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,3,10,0"
                    Foreground="WhiteSmoke"
                    Text="TopMost" />
                <ToggleButton
                    Name="tgTop"
                    Background="Transparent"
                    Checked="ToggleButton_Checked"
                    Style="{StaticResource ToggleButtonSwitch}"
                    Unchecked="ToggleButton_Checked" />
            </StackPanel>
        </Grid>

    </controls:WindowBorderless.NonClientAreaContent>
    <controls:TransitioningContentControl>
        <Grid>

            <TabControl Name="tabc">
                <TabItem Header="Home">
                    <StackPanel
                        MaxWidth="800"
                        Margin="10,10,10,0"
                        VerticalAlignment="Top">
                        <ComboBox
                            x:Name="cmbService"
                            Width="240"
                            IsEditable="True"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Left"
                            controls:InfoElement.Placeholder="Select Url Shortener Service"
                            SelectionChanged="cmbService_SelectionChanged"
                            Style="{StaticResource ComboBoxExtend}">
                            <ComboBoxItem Content="Yon" />
                            <ComboBoxItem Content="Opizo" />
                            <ComboBoxItem Content="Bitly" />
                            <ComboBoxItem Content="Atrab" />
                            <ComboBoxItem Content="PLink" />
                            <ComboBoxItem Content="Do0" />
                        </ComboBox>
                        <StackPanel Orientation="Horizontal">
                            <TextBox
                                Name="txtUrl"
                                controls:InfoElement.ContentHeight="35"
                                controls:InfoElement.Necessary="True"
                                controls:InfoElement.Placeholder="Type Url Here..."
                                TextChanged="txtUrl_TextChanged">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="TextBox">
                                        <Setter Property="Width" Value="400" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbService}" Value="0">
                                                <Setter Property="Width" Value="280" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbService}" Value="4">
                                                <Setter Property="Width" Value="280" />
                                            </DataTrigger>
                                            
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBox
                                Name="txtCustom"
                                Width="140"
                                Margin="10,0,5,0"
                                controls:InfoElement.ContentHeight="35"
                                controls:InfoElement.Placeholder="Custom Url [Optional]"
                                MaxLength="10">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="TextBox">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbService}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbService}" Value="4">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button
                                Name="btn"
                                Width="140"
                                Margin="5,0,0,0"
                                Click="Button_Click"
                                Content="Short it!"
                                IsDefault="True"
                                IsEnabled="False"
                                Style="{StaticResource ButtonPrimary}" />
                        </StackPanel>
                        <StackPanel
                            Name="stck"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            Orientation="Horizontal"
                            Visibility="Hidden">
                            <Grid>
                                <TextBlock
                                    Foreground="{StaticResource DarkSuccessBrush}"
                                    Style="{StaticResource TextBlockTitle}"
                                    Text="Copied" />

                                <Rectangle
                                    Width="200"
                                    Height="40"
                                    RadiusX="4"
                                    RadiusY="4"
                                    Stroke="{StaticResource BorderBrush}"
                                    StrokeDashArray="2,2" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
                <TabItem Header="List">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                Name="btnLoad"
                                Width="130"
                                Margin="10"
                                Click="btnLoad_Click"
                                Content="Load Text File"
                                Style="{StaticResource ButtonPrimary}" />
                                <Button Click="Button_Help" controls:IconElement.Geometry="{DynamicResource AskGeometry}" Style="{DynamicResource ButtonPrimary}"/>
                            </StackPanel>
                            <ComboBox
                                x:Name="cmbListService"
                                Margin="10,0,10,0"
                                IsEditable="True"
                                controls:InfoElement.Placeholder="Select Url Shortener Service"
                                Style="{StaticResource ComboBoxExtend}">
                                <ComboBoxItem Content="Yon" />
                                <ComboBoxItem Content="Opizo" />
                                <ComboBoxItem Content="Bitly" />
                                <ComboBoxItem Content="Atrab" />
                                <ComboBoxItem Content="PLink" />
                                <ComboBoxItem Content="Do0" />
                            </ComboBox>
                            <GridSplitter
                                Margin="0,5,0,0"
                                HorizontalAlignment="Stretch"
                                Background="Transparent"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1" />
                            <Button
                                Name="btnStart"
                                Width="140"
                                Margin="10"
                                Click="btnStart_Click"
                                Content="Start">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource ButtonPrimary}" TargetType="Button">
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=dataGrid}" Value="0">
                                                <Setter Property="IsEnabled" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <GridSplitter
                            Grid.Column="1"
                            Width="4"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1,0,0,0" />

                        <DataGrid
                            x:Name="dataGrid"
                            Grid.Column="1"
                            Margin="10,10"
                            AutoGenerateColumns="False"
                            HeadersVisibility="All"
                            IsReadOnly="True"
                            RowHeaderWidth="60">
                            <DataGrid.RowHeaderTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType=DataGridRow}}" />
                                </DataTemplate>
                            </DataGrid.RowHeaderTemplate>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="1*"
                                    MinWidth="200"
                                    Binding="{Binding Link}"
                                    Header="Link" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

            </TabControl>
            <controls:ScrollViewer
                Grid.Column="0"
                HorizontalAlignment="Right"
                IsEnableInertia="True"
                IsPenetrating="True"
                VerticalScrollBarVisibility="Hidden">
                <StackPanel
                    Margin="0,10,10,10"
                    controls:Growl.GrowlParent="True"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    IsHitTestVisible="True" />
            </controls:ScrollViewer>
        </Grid>
    </controls:TransitioningContentControl>
</controls:WindowBorderless>