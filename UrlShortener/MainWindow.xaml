<controls:WindowBorderless
    x:Class="UrlShortener.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HandyControl.Controls;assembly=HandyControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="clr-namespace:HandyControl.Interactivity;assembly=HandyControl"
    xmlns:local="clr-namespace:UrlShortener"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mawdi Shorter"
    Width="600"
    Height="350"
    FocusManager.FocusedElement="{Binding RelativeSource={x:Static RelativeSource.Self}, Mode=OneTime}"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    ShowTitle="True"
    Style="{StaticResource CustomWindowStyle}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <controls:WindowBorderless.NoUserContent>
        <StackPanel Orientation="Horizontal">
            <Menu
                Margin="10,0,0,0"
                Background="Transparent"
                WindowChrome.IsHitTestVisibleInChrome="True">
                <MenuItem
                    Foreground="White"
                    Header="Settings"
                    IsEnabled="False" />
                <MenuItem
                    Foreground="White"
                    Header="Update"
                    IsEnabled="False" />
                <MenuItem
                    Click="MenuItem_Click"
                    Foreground="White"
                    Header="About" />
            </Menu>
        </StackPanel>
    </controls:WindowBorderless.NoUserContent>
    <controls:TransitioningContentControl>
        <Grid>
            <StackPanel
                MaxWidth="800"
                Margin="32"
                VerticalAlignment="Top">
                <controls:StepBar x:Name="StepBarMain">
                    <controls:StepItem Title="Enter Url" />
                    <controls:StepItem Title="Choose Url Shortener Service" />
                    <controls:StepItem Title="Complete" />
                </controls:StepBar>
                <StackPanel
                    Margin="0,32,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="180"
                        Click="StepBar_Click"
                        Command="interactivity:ControlCommands.Prev"
                        CommandTarget="{Binding ElementName=StepBarMain}"
                        Content="Prev"
                        Style="{StaticResource ButtonPrimary}"
                        Tag="Prev" />
                    <Button
                        Name="btnNext"
                        Width="180"
                        Margin="16,0,0,0"
                        Click="StepBar_Click"
                        Command="interactivity:ControlCommands.Next"
                        CommandTarget="{Binding ElementName=StepBarMain}"
                        Content="Next"
                        IsEnabled="False"
                        Style="{StaticResource ButtonPrimary}"
                        Tag="Next" />
                </StackPanel>
                <Grid Margin="5,20,0,0">
                    <TextBox
                        Name="txtUrl"
                        Margin="5,20,0,0"
                        controls:InfoElement.Necessary="True"
                        controls:InfoElement.Placeholder="Type Url Here..."
                        TextChanged="txtUrl_TextChanged">
                        <TextBox.Style>
                            <Style BasedOn="{StaticResource TextBoxExtend}" TargetType="TextBox">
                                <Setter Property="Visibility" Value="Hidden" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Index}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox
                        Name="cmbService"
                        Width="240"
                        Margin="5,20,0,0"
                        HorizontalAlignment="Left"
                        controls:InfoElement.Placeholder="Select Url Shortener Service"
                        SelectionChanged="cmbService_SelectionChanged">
                        <ComboBoxItem Content="Bitly" />
                        <ComboBoxItem Content="Soon..." IsEnabled="False" />
                        <ComboBox.Style>
                            <Style BasedOn="{StaticResource ComboBoxExtend}" TargetType="ComboBox">
                                <Setter Property="Visibility" Value="Hidden" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Index}" Value="1">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                    <StackPanel
                        Name="stck"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        MouseLeftButtonDown="stck_MouseLeftButtonDown"
                        Orientation="Horizontal">
                        <TextBlock
                            Name="txtShort"
                            Margin="5"
                            HorizontalAlignment="Left"
                            FontSize="16"
                            MouseDown="txtShort_MouseDown"
                            Style="{StaticResource TextBlockDefaultPrimary}" />
                        <Grid>
                            <TextBlock
                                Name="txtCopy"
                                Foreground="{StaticResource BorderBrush}"
                                Style="{StaticResource TextBlockTitle}"
                                Text="Click Here to Copy" />

                            <Rectangle
                                Width="200"
                                Height="40"
                                RadiusX="4"
                                RadiusY="4"
                                Stroke="{StaticResource BorderBrush}"
                                StrokeDashArray="2,2" />
                        </Grid>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Hidden" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Index}" Value="2">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <controls:ScrollViewer
                Grid.Column="0"
                HorizontalAlignment="Right"
                IsEnableInertia="True"
                IsPenetrating="True"
                VerticalScrollBarVisibility="Hidden">
                <StackPanel
                    Name="PanelMessage"
                    Margin="0,10,10,10"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    IsHitTestVisible="True" />
            </controls:ScrollViewer>
        </Grid>
    </controls:TransitioningContentControl>
</controls:WindowBorderless>